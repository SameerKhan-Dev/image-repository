<body> 
  <div style = "padding-left: 20%; padding-right: 20%">
    <h3 style = "color:#4B0082 " class="text-center text-success pt-5"> REGISTER FORM</h3>
    <form style = "border-radius: 25px; background-color: #e6e6e6; padding: 5%;" id = "addResourceForm" method = "post" class ="form" action = "/register">
      <div class="form-group">
        <label for="user-name">User Name:</label>
        <input required type="text" name = "username" class="form-control" id="userName" aria-describedby="emailHelp" placeholder="Enter a User Name...">
      </div> 
      <div class="form-group">
        <label for="user-name">Email</label>
        <input required type="email" name = "email" class="form-control" id="userName" aria-describedby="emailHelp" placeholder="Enter an email...">
      </div>
      <div class="form-group">
          <label for="userPassword">Password</label>
          <input required type="password" name = "password" class="form-control" id="userPassword" placeholder="Password">
      </div>
        <button style ="background-color:#4B0082" type="submit" class="btn btn-primary">Register!</button>
    </form>
  </div>
